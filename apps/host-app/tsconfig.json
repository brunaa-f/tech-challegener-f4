{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "types": ["@testing-library/jest-dom", "jest", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@shared/*": ["./src/shared/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@repositories/*": ["src/core/repositories/*"],
      "@services/*": ["./src/infra/services/*"],
      "@libs/db": ["../../libs/db"]
    },
    "baseUrl": ".", 
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "include": ["next-env.d.ts", "declarations.d.ts", "src/**/*", "next.config.js", ".next/types/**/*.ts", "src/__tests__/setup.d.ts"],
  "exclude": ["node_modules"]
}
