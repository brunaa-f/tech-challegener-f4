{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@shared/*": ["./src/shared"],
      "@hooks/*": ["./src/hooks/*"],
      "@repositories/*": ["./src/repositories/*"],
      "@services/*": ["./src/services/*"],
      "@libs/db": ["../../libs/db"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true
  },
  "include": ["next-env.d.ts", "declarations.d.ts", "src/**/*", "next.config.js", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
